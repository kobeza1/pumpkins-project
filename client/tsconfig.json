{
    "compilerOptions": {
        "removeComments": true,
        "rootDir": "./src",
        "outDir": "./dist",
        "target": "ESNext",
        "module": "ESNext",
        "jsx": "react-jsx",
        "allowJs": true,
        "moduleResolution": "nodenext",
        "sourceMap": true,
        "esModuleInterop": true,
        "strict": true,
        "skipLibCheck": true,
        "plugins": [
            {
                "name": "typescript-plugin-css-modules"
            }
        ]
    },
    "include": ["./src/**/*", "customTemplate.js"],
    "exclude": ["node_modues", "dist"]
}
